<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

   <bean id="server" class="com.mike.server.Server">
        <property name="waiterClient">
            <bean id="waiterClient" class="java.util.HashSet" />
        </property>     
        <property name="tillClient">
            <bean id="tillClient" class="java.util.HashSet" />
        </property> 
        <property name="tables">
            <bean id="tables" class="com.mike.message.TableList" />
        </property> 

   </bean>
   
   <bean id="table" type="prototype" class="com.mike.message.Table" >
        <property name="tab">
            <bean id="currentTab" class="com.mike.item.Tab">
                <property name="allItems">
                    <bean id="allItems" class="java.util.ArrayList" />
                </property>               
                <property name="drinks">
                    <bean id="drinks" class="java.util.ArrayList" />
                </property>               
                <property name="food">
                    <bean id="food" class="java.util.ArrayList" />
                </property>               
            </bean>
        </property>     
   </bean>
   
   
    <!-- =============================================== -->
  <!-- JMS Common, Define JMS connectionFactory       -->
  <!-- =============================================== -->
  <!-- Activemq connection factory -->
  <bean id="amqConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
    <!-- brokerURL, You may have different IP or port -->
    <constructor-arg index="0" value="tcp://localhost:8080" />
  </bean>
 
  <!-- Pooled Spring connection factory -->
  <bean id="connectionFactory"
    class="org.springframework.jms.connection.CachingConnectionFactory">
    <constructor-arg ref="amqConnectionFactory" />
  </bean>
 
  <!-- ======================================================= -->
  <!-- JMS Send, define default destination and JmsTemplate    -->
  <!-- ======================================================= -->
  <!-- Default Destination Queue Definition -->
  <bean id="defaultDestination" class="org.apache.activemq.command.ActiveMQQueue">
    <!-- name of the queue -->
    <constructor-arg index="0" value="Send2Recv" />
  </bean>
 
  <!-- JmsTemplate Definition -->
  <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
    <property name="connectionFactory" ref="connectionFactory" />
    <property name="defaultDestination" ref="defaultDestination" />
  </bean>
   

</beans>